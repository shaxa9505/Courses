<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head") %>

    <body>

        <!-- ============= HEADER START ============ -->


        <header>
            <div class="header-nav">
                <div class="container">

                    <%- include('./partials/navbar') %>

                        <h2 class="mt-5 text-center">
                            <%= title %>
                        </h2>
                </div>
            </div>
        </header>


        <!-- ============= HEADER END ============ -->


        <!-- ============= SECTION START ============ -->

        <section>
            <div class="container">
                <div class="row justify-content-center mt-5">
                    <div class="col-lg-4">
                        <% editCourse.forEach((item, index)=> {%> 
                            <form method="POST" action="/updateCourse/<%= item.id %>">
                                        <div class="mb-3">
                                            <label for="title" class="form-label">Kursning nomini kiriting</label>
                                            <input type="text" class="form-control" value="<%= item.title %>" name="title" id="title">
                                        </div>
                                        <div class="mb-3">
                                            <label for="term" class="form-label">Kursning davomiyligini kiriting</label>
                                            <input type="text" class="form-control" value="<%= item.term %>" name="term" id="term">
                                        </div>
                                        <div class="mb-3">
                                            <label for="teacher" class="form-label">O'qituvchini ismini kiriting</label>
                                            <input type="text" class="form-control" value="<%= item.teacher %>" name="teacher" id="teacher">
                                        </div>
                                        <button type="submit" class="btn btn-primary">O'zgartirish</button>
                                </form>
                                <%}) %>
                    </div>
                </div>
            </div>
        </section>

    </body>

</html>